{% extends "@KrichaDoctrineAudit/layout.html.twig" %}

{% block entity_audit_content %}
    <div class="card border-0">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a
                                href="{{ path('kricha_doctrine_entity_audit_list') }}">Home</a></li>
                </ol>
            </nav>
            <h4 class="card-title">{{ audited|length }} audited entities</h4>
            <table class="table table-hover">
                <thead class="thead-dark">
                <th>Entity</th>
                <th>Table</th>
                <th>Activity</th>
                <th width="10%"></th>
                </thead>
                <tbody>
                {% for entity, data in audited %}
                    <tr>
                        <td><code>{{ entity|namespace_to_short_class }}</code></td>
                        <td>{{ data.table|escape }}</td>
                        <td>{{ data.audits_count ~ ' operations' }}</td>
                        <td>
                            <a href="{{ path('kricha_doctrine_entity_audit_history', {'entity': entity|namespace_to_param}) }}">View
                                audits</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock entity_audit_content %}
